<section class="container" id="signup">
  <h1>Sign Up!</h1>
  <div class="row">
    <%= form_with class: "col s12",scope: :user, url: "/users" do|f|%>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :first_name,id: "first_name",class: "validate", placeholder: "First Name", required: true%>
          <% f.label :first_name %>
        </div>
        <div class="input-field col s6">
          <%= f.text_field :last_name,id: "last_name",class: "validate", placeholder: "Last Name", required: true %>
          <% f.label :last_name %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s4">
          <%= f.text_field :username,id: "username",class: "validate", placeholder: "Username", required: true %>
          <% f.label :username %>
        </div>
        <div class="input-field col s4">
          <%= f.text_field :email,id: "email",class: "validate", placeholder: "Email", required: true %>
          <% f.label :email %>
        </div>
        <div class="input-field col s4">
          <%= f.text_field :age, id: "age", placeholder: "Age (optional)"%>
          <% f.label :age %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password,id: "pass",class: "validate", placeholder: "Password", required: true %>
          <% f.label :password %>
        </div>
      </div>
      <%= f.submit "Sign Up", class: "btn waves-effect waves-light btn-large" %>
    <% end %>

  </div>
</section>